<% layout("layouts/boilerPlate") -%>

<div class="row mt-3 mb-3">
  <div class="col-8 offset-2">

    <h3>Edit your Event</h3>

    <form method="POST" action="/events/<%= event._id %>?_method=PUT" novalidate class="needs-validation">

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="event[title]"
          value="<%= event.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter event title!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="event[description]" type="text" class="form-control" required>
<%= event.description %></textarea>
        <div class="invalid-feedback">Please write a short description!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image-URL</label>
        <input
          name="event[image]"
          value="<%= event.image %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid image URL!</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="price" class="form-label">Ticket Price</label>
          <input
            name="event[price]"
            value="<%= event.price %>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price!</div>
        </div>

        <div class="mb-3 col-md-6">
          <label for="date" class="form-label">Event Date</label>
          <input
            name="event[date]"
            value="<%= event.date %>"
            type="date"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please select a date!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="event[location]"
          value="<%= event.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid!</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="event[country]"
          value="<%= event.country %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country name should be valid!</div>
      </div>

      <button class="btn btn-dark mt-3 edit-btn">Edit Event</button>
    </form>

  </div>
</div>
